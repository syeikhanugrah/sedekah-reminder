{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/registration') }}
{% endblock %}

{% block body %}
    <div class="form-registration">
        <img src="{{ asset('build/images/logo.png') }}" class="img-responsive img-center mb-4" alt="Logo">

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.namaLengkap) }}
                {{ form_errors(form.namaLengkap) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.nomorHp) }}
                {{ form_errors(form.nomorHp) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.password.first) }}
                {{ form_errors(form.password.first) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.password.second) }}
            </div>

            <button type="submit" class="btn btn-primary btn-block">Daftar</button>
        {{ form_end(form) }}

